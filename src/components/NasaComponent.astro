---
interface Props{
    id: number
    src: string
    date: Date
    cameraName: string


}
const {id, src, date, cameraName} = Astro.props

---

<a href={`/poke/${id}`}
    class="h-full justify-center rounded-lg border shadow-md bg-gray-800 border-gray-700 hover:scale-105 hover:border-gray-500 transition ease-in flex flex-col p-4"
>
    <picture class=" flex justify-center p-4 ">
        <img class="mb-5 rounded-lg w-52 h-50" src={src} alt={`Figura Lunar con ID: ${id}`}>
    </picture>

    <header class=" p4- flex-grow flex items-center flex-col">
        

        <h2 class="my-2 text-2xl font-bold tracking-tight text-white">
            Id: {id}
        </h2>
        <h2 class="my-2 text-2xl font-bold tracking-tight text-white">
            Camera Name: {cameraName}
        </h2>
        
        <p>
            Earth Date {date}
        </p>
        
    </header>

</a>